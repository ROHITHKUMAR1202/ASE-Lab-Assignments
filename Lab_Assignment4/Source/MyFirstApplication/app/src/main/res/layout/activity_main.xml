<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rohithkumar.myfirstapplication.MainActivity"
    android:background="@android:color/holo_red_dark">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="31dp"
        android:id="@+id/editText_Pwd"
        android:layout_below="@+id/editText_Uname"
        android:hint="please enter password"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:textColor="?attr/actionMenuTextColor"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome...!"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:textColor="@android:color/background_dark"
        android:id="@+id/welcome"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Sign-in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:id="@+id/button_Signin"
        android:fontFamily="cursive"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_below="@+id/editText_Pwd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Sign Up...!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_Signup"
        android:fontFamily="cursive"
        android:textSize="24sp"
        android:onClick="Register"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignBaseline="@+id/button_Signin"
        android:layout_alignBottom="@+id/button_Signin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_Uname"
        android:layout_marginTop="72dp"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:hint="please enter username"
        android:textColor="?attr/actionMenuTextColor"
        android:textStyle="normal|bold"
        android:layout_below="@+id/welcome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
